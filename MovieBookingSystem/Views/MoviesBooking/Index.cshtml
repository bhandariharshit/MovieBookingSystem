@model IEnumerable<MovieBookingSystem.Data.Movy>

@{
    ViewBag.Title = "Index";
}

<h2>Book Movies</h2>

<p>
    @Html.ActionLink("View Booking History", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfSeatsAvailable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfSeatsAvailable)
        </td>
        <td>
            @Html.ActionLink("Book", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>
