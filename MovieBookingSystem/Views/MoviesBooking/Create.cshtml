@model IEnumerable<MovieBookingSystem.Models.MovieDetailModel>

@{
    ViewBag.Title = "Index";
}

<h2>Book Movies</h2>

<p>
    @Html.ActionLink("Book Tickets", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfSeatsBooked)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfSeatsBooked)
            </td>
        </tr>
    }

</table>
